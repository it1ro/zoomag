<Window x:Class="Zoomag.Views.ProductEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товар" Height="240" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Наименование:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="NameInput" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Категория:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="CategorySelector" Grid.Row="1" Grid.Column="1"
                  DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5"/>

        <TextBlock Text="Ед. изм.:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="UnitSelector" Grid.Row="2" Grid.Column="1"
                  DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>