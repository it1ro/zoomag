<Window x:Class="Zoomag.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему"
        Height="450"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Единый стиль для всех полей ввода -->
        <Style TargetType="TextBox" x:Key="RoundedInputStyle">
            <Setter Property="Height" Value="35" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="White"
                                BorderBrush="#D1D5DB"   
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="0" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- При фокусе — синяя рамка -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6" />
                                <Setter TargetName="border" Property="BorderThickness" Value="2" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox не наследует от TextBox, поэтому стиль отдельный,
             но почти идентичный -->
        <Style TargetType="PasswordBox" x:Key="RoundedPasswordStyle">
            <Setter Property="Height" Value="35" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="White"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="0" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6" />
                                <Setter TargetName="border" Property="BorderThickness" Value="2" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="8" Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="30,20">
            <TextBlock Text="Вход в Зоомаг"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <TextBlock Text="Логин" FontSize="14" Margin="0,0,0,5" />
            <TextBox x:Name="LoginTextBox"
                     Style="{StaticResource RoundedInputStyle}"
                     Margin="0,0,0,15" />

            <TextBlock Text="Пароль" FontSize="14" Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordBox"
                         Style="{StaticResource RoundedPasswordStyle}"
                         Margin="0,0,0,15" />

            <TextBlock Text="Роль" FontSize="14" Margin="0,0,0,5" />
            <ComboBox x:Name="RoleComboBox"
                      Height="35"
                      Margin="0,0,0,25" />

            <Button x:Name="LoginButton"
                    Content="Войти"
                    Height="40"
                    Click="LoginButton_Click" />
        </StackPanel>
    </Border>
</Window>