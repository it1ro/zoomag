<Window x:Class="Zoomag.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему"
        Height="450"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Border Background="White" CornerRadius="8" Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="30,20">
            <TextBlock Text="Вход в Зоомаг"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <TextBlock Text="Логин" FontSize="14" Margin="0,0,0,5" />

            <Grid Margin="0,0,0,15">
                <TextBox x:Name="LoginTextBox"
                         Height="35"
                         VerticalContentAlignment="Center" />

            </Grid>

            <TextBlock Text="Пароль" FontSize="14" Margin="0,0,0,5" />

            <Grid Margin="0,0,0,15">
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             VerticalContentAlignment="Center" />

            </Grid>

            <TextBlock Text="Роль" FontSize="14" Margin="0,0,0,5" />
            <ComboBox x:Name="RoleComboBox"
                      Height="35"
                      Margin="0,0,0,25"
                      SelectedIndex="0" />

            <UniformGrid Rows="1" Columns="1">
                <Button x:Name="LoginButton"
                        Content="Войти"
                        Height="40"
                        Click="LoginButton_Click" />
            </UniformGrid>
        </StackPanel>
    </Border>
</Window>