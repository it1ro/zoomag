<Window x:Class="Zoomag.Views.Reports.CategoryReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Отчет по категориям" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Width="200" Margin="10">
            <Label Content="Выберите категорию:"/>
            <ComboBox x:Name="CategorySelector" Margin="0,0,0,10" SelectionChanged="OnCategoryChanged"/>
            <Button x:Name="ExportToExcelButton" Content="Вывод в Excel" Click="ExportToExcel" Style="{StaticResource ExportButton}"/>
            <Button x:Name="BackButton" Content="Назад" Click="GoToAdmin" Style="{StaticResource BackButton}"/>
        </StackPanel>
        <DataGrid x:Name="CategoryProductsGrid" AutoGenerateColumns="False" ItemsSource="{Binding Privoz}"/> <!-- TODO понять откуда Privoz и зачем -->
    </DockPanel>
</Window>