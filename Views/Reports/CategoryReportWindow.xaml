<Window x:Class="Zoomag.Views.Reports.CategoryReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoomag"
        mc:Ignorable="d"
        Title="Отчет по категориям" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="CategoryProductsGrid" 
                  AutoGenerateColumns="False" 
                  ItemsSource="{Binding Privoz}" 
                  Grid.Column="0" 
                  Grid.Row="0" 
                  Grid.ColumnSpan="4" 
                  Grid.RowSpan="4" 
                  FontSize="15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" 
                                    Binding="{Binding Path=Name}" 
                                    Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Ед/изм" 
                                    Binding="{Binding Path=Unit.Name}" 
                                    Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество" 
                                    Binding="{Binding Path=Qty}" 
                                    Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Цена" 
                                    Binding="{Binding Path=Price}" 
                                    Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Категория" 
                                    Binding="{Binding Path=Category.Name}" 
                                    Width="100"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button x:Name="BackButton" 
                Content="Назад" 
                FontSize="24" 
                Grid.Row="3" 
                Grid.Column="4" 
                Click="GoToAdmin"></Button>
                
        <Button x:Name="ExportToExcelButton" 
                Content="Вывод в Excel" 
                FontSize="24" 
                Grid.Row="2" 
                Grid.Column="4" 
                Click="ExportToExcel"></Button>
                
        <ComboBox x:Name="CategorySelector" 
                  Grid.Row="1" 
                  Grid.Column="4" 
                  SelectionChanged="OnCategoryChanged"></ComboBox>
    </Grid>
</Window>