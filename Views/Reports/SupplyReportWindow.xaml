<Window x:Class="Zoomag.Views.Reports.SupplyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoomag"
        mc:Ignorable="d"
        Title="Supply Report Filter" Height="800" Width="1000">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>      <!-- Заголовок -->
            <RowDefinition Height="Auto"/>      <!-- Панель фильтров -->
            <RowDefinition Height="*"/>         <!-- Таблица -->
            <RowDefinition Height="Auto"/>      <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Supply Report Filter" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Панель фильтров -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20">
            <GroupBox Header="Filters" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Категория -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Category:" 
                           VerticalAlignment="Center"/>
                    <ComboBox Name="cb" Grid.Row="0" Grid.Column="1" 
                              Margin="5" VerticalAlignment="Center" 
                              MinWidth="200" Height="30"/>

                    <!-- Первая буква названия -->
                    <Label Grid.Row="0" Grid.Column="2" Content="First Letter:" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBox Name="tbbuk" Grid.Row="0" Grid.Column="3" 
                             Margin="5" VerticalAlignment="Center" 
                             Width="100" Height="30" MaxLength="1" 
                             HorizontalAlignment="Left"/>

                    <!-- Дата -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Date:" 
                           VerticalAlignment="Center" Margin="0,10,0,0"/>
                    <DatePicker x:Name="DatePicker" Grid.Row="1" Grid.Column="1" 
                              Margin="5,10,5,5" 
                              HorizontalAlignment="Left" 
                              FirstDayOfWeek="Monday"/>

                    <!-- Метка для календаря -->
                    <Label Grid.Row="1" Grid.Column="2" Content="Select Date:" 
                           VerticalAlignment="Top" Margin="10,10,0,0" 
                           Grid.ColumnSpan="2"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- Таблица с результатами -->
        <DataGrid x:Name="dg8" 
                  Grid.Row="2"
                  AutoGenerateColumns="False" 
                  FontSize="14"
                  Margin="0,0,0,10"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" 
                                    Binding="{Binding Path=Id}" 
                                    Width="80" 
                                    SortDirection="Ascending"/>
                <DataGridTextColumn Header="Date" 
                                    Binding="{Binding Path=Data}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding Path=Naim}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Quantity" 
                                    Binding="{Binding Path=Qty}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Price" 
                                    Binding="{Binding Path=Price}" 
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button x:Name="bt1" 
                    Content="Generate Report" 
                    Background="LightBlue" 
                    FontSize="14"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    Height="40" 
                    Width="150" />
            
            <Button Content="Back" 
                    Background="LightGray" 
                    FontSize="14"
                    Padding="20,10"
                    Height="40" 
                    Width="100" />
        </StackPanel>
    </Grid>
</Window>