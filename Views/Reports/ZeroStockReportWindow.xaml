<Window x:Class="Zoomag.Views.Reports.ZeroStockReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoomag"
        mc:Ignorable="d"
        Title="Нулевые позиции" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Для кнопок -->
            <RowDefinition Height="*" />     <!-- Для DataGrid -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="10">
            <Button x:Name="ExportToExcelButton" 
                    Content="Выгрузить в Excel" 
                    FontSize="16" 
                    Padding="10,5" 
                    Margin="5" 
                    Click="ExportToExcel"/>
            <Button x:Name="BackButton" 
                    Content="Назад" 
                    FontSize="16" 
                    Padding="10,5" 
                    Margin="5" 
                    Click="GoToAdminReports"/>
        </StackPanel>

        <DataGrid x:Name="ZeroStockGrid" 
                  Grid.Row="1" 
                  Margin="10" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True" 
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" 
                                    Binding="{Binding Name}" 
                                    Width="300" />
                <DataGridTextColumn Header="Категория" 
                                    Binding="{Binding Category}" 
                                    Width="200" />
                <DataGridTextColumn Header="Ед. изм." 
                                    Binding="{Binding Unit}" 
                                    Width="100" />
                <DataGridTextColumn Header="Цена" 
                                    Binding="{Binding Price}" 
                                    Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>