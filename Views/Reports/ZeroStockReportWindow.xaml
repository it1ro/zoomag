<Window x:Class="Zoomag.Views.Reports.ZeroStockReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товары с нулевым остатком" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Товары с нулевым остатком" 
                   FontSize="18" FontWeight="Bold" Margin="10,10,10,10" HorizontalAlignment="Center"/>

        <DataGrid Grid.Row="1" Name="ZeroStockDataGrid" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  Margin="10,0,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="ExportToExcelButton" Content="Выгрузить в Excel" Width="120" Height="30" Margin="5" Click="ExportToExcel_Click"/>
            <Button Name="BackToReportsButton" Content="Назад к отчетам" Width="120" Height="30" Margin="5" Click="BackToReports_Click"/>
        </StackPanel>
    </Grid>
</Window>