<Window x:Class="Zoomag.Views.Reports.IncomingGoodsJournalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoomag"
        mc:Ignorable="d"
        Title="Журнал поступления товаров" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="GoodsReceiptsGrid" 
                  AutoGenerateColumns="False" 
                  ItemsSource="{Binding Supplies}" 
                  Grid.Column="0" 
                  Grid.Row="0" 
                  Grid.ColumnSpan="4" 
                  Grid.RowSpan="4" 
                  FontSize="15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" 
                                    Binding="{Binding Path=Date}" 
                                    Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="Наименование" 
                                    Binding="{Binding Path=Name}" 
                                    Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество" 
                                    Binding="{Binding Path=Amount}" 
                                    Width="120"></DataGridTextColumn>
                <DataGridTextColumn Header="Цена" 
                                    Binding="{Binding Path=Price}" 
                                    Width="120"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button x:Name="BackButton" 
                Content="Назад" 
                FontSize="24" 
                Grid.Row="3" 
                Grid.Column="4" 
                Click="BackButton_Click"></Button>
                
        <Button x:Name="ExportToExcelButton" 
                Content="Вывод в Excel" 
                FontSize="24" 
                Grid.Row="2" 
                Grid.Column="4" 
                Click="ExportToExcel"></Button>
    </Grid>
</Window>