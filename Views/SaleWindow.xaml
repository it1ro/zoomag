<Window x:Class="Zoomag.Views.SaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2009"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Продажа товаров"
        Height="700"
        Width="1200"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Продажа товаров"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15" />

        <Border Grid.Row="1"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Поиск товара:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0" />
                    <TextBox x:Name="SearchInput"
                             MinWidth="55"
                             VerticalContentAlignment="Center"
                             Margin="4,0,10,0"
                             TextChanged="SearchInput_TextChanged" />
                </StackPanel>
                <Button Grid.Column="1"
                        Content="Очистить поиск"
                        Click="RefreshProductList"
                        Height="35"
                        Margin="0,0,5,0" />
            </Grid>
        </Border>

        <DataGrid x:Name="ProductListGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование"
                                    Binding="{Binding Name}"
                                    Width="*" />
                <DataGridTextColumn Header="Категория"
                                    Binding="{Binding CategoryName}"
                                    Width="120" />
                <DataGridTextColumn Header="Ед. изм."
                                    Binding="{Binding UnitName}"
                                    Width="80" />
                <DataGridTextColumn Header="Цена"
                                    Binding="{Binding Price}"
                                    Width="100" />
                <DataGridTextColumn Header="Остаток"
                                    Binding="{Binding Qty}"
                                    Width="80" />
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3"
                CornerRadius="4"
                Padding="15"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Товаров в чеке:"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0" />
                    <TextBlock x:Name="ItemCountDisplay"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="Общая сумма:"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0" />
                    <TextBlock x:Name="TotalAmountDisplay"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                    <TextBlock Text="руб."
                               VerticalAlignment="Center" />
                </StackPanel>
                <Button Grid.Column="2"
                        Content="Очистить чек"
                        Click="ClearCurrentReceipt"
                        Height="35"
                        Margin="0,0,5,0" />
                <Button Grid.Column="3"
                        Content="Добавить в чек"
                        Click="AddSelectedProductToReceipt"
                        Height="35" />
            </Grid>
        </Border>

        <DataGrid x:Name="ReceiptItemsGrid"
                  Grid.Row="4"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" IsReadOnly="True" 
                                    Binding="{Binding Name, Mode=OneWay}"
                                    Width="*" />
                <DataGridTextColumn Header="Цена"
                                    Binding="{Binding Price, Mode=OneWay}"
                                    Width="100" IsReadOnly="True" />
                <!-- ВАЖНО: добавлен UpdateSourceTrigger -->
                <DataGridTextColumn Header="Кол-во"
                                    Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                    Width="80" />
                <DataGridTextColumn Header="Сумма"
                                    Binding="{Binding Total, Mode=OneWay}"
                                    Width="100" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Действия" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить"
                                    Click="RemoveItemFromReceipt"
                                    FontSize="10"
                                    Padding="8,2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Оформить продажу"
                    Click="FinalizeCurrentSale"
                    Height="45"
                    Padding="30,10"
                    Margin="0,0,10,0" />
            <Button Content="Назад"
                    Click="ReturnToMainMenu"
                    Height="45"
                    Padding="30,10" />
        </StackPanel>
    </Grid>
</Window>