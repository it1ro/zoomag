<!-- File: Zoomag/Views/ProductEditor.xaml -->
<Window x:Class="Zoomag.Views.ProductEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ProductEditor" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- Таблица поставок -->
        <DataGrid Grid.Column="0" 
                  Grid.ColumnSpan="2" 
                  Grid.Row="0" 
                  Grid.RowSpan="3" 
                  x:Name="SupplyDataGrid" 
                  AutoGenerateColumns="False" 
                  ItemsSource="{Binding Test}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" 
                                    Width="200" 
                                    Binding="{Binding Path=Date, StringFormat=dd.MM.yyyy}"></DataGridTextColumn>
                <DataGridTextColumn Header="Наименование" 
                                    Width="300" 
                                    Binding="{Binding Path=Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Ед/изм" 
                                    Width="200" 
                                    Binding="{Binding Path=Unit}"></DataGridTextColumn>
                <DataGridTextColumn Header="Кол-во" 
                                    Width="100" 
                                    Binding="{Binding Path=Quantity}"></DataGridTextColumn>
                <DataGridTextColumn Header="Цена" 
                                    Width="200" 
                                    Binding="{Binding Path=Price}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка импорта -->
        <Button Grid.Column="0" 
                Grid.Row="3" 
                x:Name="ImportButton" 
                Content="Ввод списком" 
                Click="ImportFromExcel"/>

        <!-- Кнопка сохранения -->
        <Button Grid.Column="1" 
                Grid.Row="3"  
                x:Name="SaveButton" 
                Content="Запись в БД" 
                Click="SaveToDatabase"/>

        <!-- Кнопка назад -->
        <Button Grid.Row="2" 
                Grid.Column="2" 
                x:Name="BackButton" 
                Content="Назад" 
                Grid.RowSpan="2" />
    </Grid>
</Window>