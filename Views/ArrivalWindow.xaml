<Window x:Class="Zoomag.Views.ArrivalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoomag.Views"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Привоз" Height="600" Width="1000"
        MinHeight="500" MinWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Шапка: дата + кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock Text="Дата поставки:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="DeliveryDatePicker"
                        SelectedDate="{x:Static system:DateTime.Today}"
                        Margin="0,0,15,0" />

            <Button x:Name="ImportButton"
                    Content="Ввод списком"
                    Click="ImportFromExcel"
                    Margin="0,0,10,0"
                    Height="35" />
            <Button x:Name="SaveButton"
                    Content="Запись в БД"
                    Click="SaveToDatabase"
                    Height="35"
                    FontWeight="SemiBold" />
        </StackPanel>

        <!-- Таблица поставки -->
        <DataGrid x:Name="SupplyDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding ImportedItems}"
                  CanUserAddRows="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  SelectionUnit="FullRow"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование"
                                    Binding="{Binding Path=Name}"
                                    Width="Auto" MinWidth="150" />
                <DataGridTemplateColumn Header="Ед/изм" Width="Auto" MinWidth="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:ArrivalWindow}, Path=DataContext.UnitsList}"
                                SelectedValue="{Binding Path=Unit.Id, Mode=TwoWay}"
                                SelectedValuePath="Id"
                                DisplayMemberPath="Name" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Категория" Width="Auto" MinWidth="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:ArrivalWindow}, Path=DataContext.CategoriesList}"
                                SelectedValue="{Binding Path=Category.Id, Mode=TwoWay}"
                                SelectedValuePath="Id"
                                DisplayMemberPath="Name" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Кол-во"
                                    Binding="{Binding Path=Quantity}"
                                    Width="Auto" MinWidth="60" />
                <DataGridTextColumn Header="Цена"
                                    Binding="{Binding Path=Price}"
                                    Width="Auto" MinWidth="70" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Управление -->
        <Button x:Name="BackButton"
                Grid.Row="2"
                Content="Назад"
                Click="BackButton_Click"
                HorizontalAlignment="Right"
                Height="35"
                Padding="20,5" />
    </Grid>
</Window>