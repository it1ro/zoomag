<Window x:Class="Zoomag.Views.SupplyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoomag.Views"
        mc:Ignorable="d"
        Title="Привоз" Height="600" Width="1000"
        MinHeight="500" MinWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Кнопки импорта/сохранения -->
            <RowDefinition Height="*" />    <!-- Таблица данных -->
            <RowDefinition Height="Auto" /> <!-- Кнопка назад -->
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="ImportButton"
                    Content="Загрузить список товаров"
                    Click="ImportFromExcel"
                    Margin="0,0,10,0"
                    Height="35" />
            <Button x:Name="SaveButton"
                    Content="Запись в БД"
                    Click="SaveToDatabase"
                    Height="35"
                    Background="LightGreen"
                    FontWeight="SemiBold" />
        </StackPanel>

        <!-- Таблица поставок -->
        <DataGrid x:Name="SupplyDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding ImportedItems}"
                  CanUserAddRows="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  SelectionUnit="FullRow"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата"
                                    Binding="{Binding Path=Date, StringFormat=dd.MM.yyyy}"
                                    Width="Auto" MinWidth="80" />
                <DataGridTextColumn Header="Наименование"
                                    Binding="{Binding Path=Name}"
                                    Width="Auto" MinWidth="150" />
                <!-- Выпадающий список для Единицы измерения -->
                <DataGridTemplateColumn Header="Ед/изм" Width="Auto" MinWidth="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:SupplyWindow}, Path=DataContext.UnitsList}"
                                SelectedValue="{Binding Path=Unit.Id, Mode=TwoWay}" 
                                SelectedValuePath="Id" 
                                DisplayMemberPath="Name" /> <!-- Отображает Name -->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox
                                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:SupplyWindow}, Path=DataContext.UnitsList}"
                                SelectedValue="{Binding Path=Unit.Id, Mode=TwoWay}"
                                SelectedValuePath="Id"
                                DisplayMemberPath="Name" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <!-- Выпадающий список для Категории -->
                <DataGridTemplateColumn Header="Категория" Width="Auto" MinWidth="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:SupplyWindow}, Path=DataContext.CategoriesList}"
                                SelectedValue="{Binding Path=Category.Id, Mode=TwoWay}"
                                SelectedValuePath="Id"
                                DisplayMemberPath="Name" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Кол-во"
                                    Binding="{Binding Path=Quantity}"
                                    Width="Auto" MinWidth="60" />
                <DataGridTextColumn Header="Цена"
                                    Binding="{Binding Path=Price}"
                                    Width="Auto" MinWidth="70" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка назад -->
        <Button x:Name="BackButton"
                Grid.Row="2"
                Content="Назад"
                Click="BackButton_Click"
                HorizontalAlignment="Right"
                Height="35"
                Padding="20,5" />
    </Grid>
</Window>