<Window x:Class="Zoomag.Views.UnitsEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор единиц измерения" Height="500" Width="600">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Таблица единиц измерения -->
        <DataGrid x:Name="UnitsGrid" Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Новая ед. изм." Click="NewUnitButton_Click" Margin="0,0,10,0"/>
            <Button Content="Редактировать" Click="EditUnitButton_Click" Margin="0,0,10,0"/>
            <Button Content="Удалить" Click="DeleteButton_Click" Margin="0,0,10,0"/>
            <Button Content="Назад" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>