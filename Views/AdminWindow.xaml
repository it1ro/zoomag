<!-- File: Zoomag/Views/AdminWindow.xaml -->
<Window x:Class="Zoomag.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AdminWindow" Height="500" Width="700">
    <ScrollViewer>
        <StackPanel Margin="15">
           
            
            <GroupBox Header="Основные действия" Margin="5" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Привоз" Margin="0,0,10,0" Click="ShowArrival" />
                    <Button Content="Продажа" Margin="0,0,10,0" Click="ShowSale" />
                    <Button Content="Склад" Margin="0,0,10,0" Click="ShowStock" />
                    <Button Content="Редактор товаров" Click="OpenProductEditor" />
                    <Button Content="Редактор категорий" Click="OpenCategoriesEditor" />
                    <Button Content="Редактор единиц" Click="OpenUnitsEditor" />
                    <Button Content="Отчеты" Margin="0,0,10,0" Click="ShowReports" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>