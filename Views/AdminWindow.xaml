<Window x:Class="Zoomag.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoomag"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Новая категория"     FontSize="25" Grid.ColumnSpan="2"                    Grid.Row="0"></TextBlock>
        <TextBlock Text="Новая ед/изм"       FontSize="25" Grid.ColumnSpan="2"                    Grid.Row="2"></TextBlock>
        <TextBlock Text="Товар"              FontSize="25" Grid.ColumnSpan="1"                    Grid.Row="4"></TextBlock>
        <TextBlock Text="ед/изм"             FontSize="25" Grid.ColumnSpan="1"                    Grid.Row="6" Grid.Column="0"></TextBlock>
        <TextBlock Text="стоимость"          FontSize="25" Grid.ColumnSpan="1"                    Grid.Row="7" Grid.Column="0"></TextBlock>
        <TextBlock Text="категория"          FontSize="25" Grid.ColumnSpan="1"                    Grid.Row="8" Grid.Column="0"></TextBlock>
        <TextBlock Text="Кол_во"             FontSize="25" Grid.ColumnSpan="1"                    Grid.Row="5" Grid.Column="0"></TextBlock>
        <TextBox   x:Name="kol_vo"           FontSize="15" Grid.ColumnSpan="1" Margin="10,10,10,10" Grid.Row="5" Grid.Column="1"></TextBox>
        <TextBox   x:Name="new_kat"          FontSize="15" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="1" Grid.Column="1"></TextBox>
        <TextBox   x:Name="new_ed"           FontSize="15" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="3" Grid.Column="1"></TextBox>
        <TextBox   x:Name="tovar"            FontSize="15" Grid.ColumnSpan="1" Margin="10,10,10,10" Grid.Row="4" Grid.Column="1"></TextBox>
        <TextBox   x:Name="price"            FontSize="15" Grid.ColumnSpan="1" Margin="10,10,10,10" Grid.Row="7" Grid.Column="1"></TextBox>
        <Button    Content="добавление категории" FontSize="20" Grid.ColumnSpan="5" Margin="10,10,10,10" Grid.Row="0" Grid.Column="4" Click="Dob_kat"></Button>
        <Button    Content="заполнение ед/изм"    FontSize="20" Grid.ColumnSpan="5" Margin="10,10,10,10" Grid.Row="1" Grid.Column="4" Click="Zap"></Button>
        <Button    Content="ввод товаров"         FontSize="20" Grid.ColumnSpan="5" Margin="10,10,10,10" Grid.Row="2" Grid.Column="4" Click="Vvod"></Button>
        <Button    Content="Привоз"              FontSize="20" Grid.ColumnSpan="5" Margin="10,10,10,10" Grid.Row="3" Grid.Column="4" Click="Privoz"></Button>
        <Button    Content="Продажа"             FontSize="20" Grid.ColumnSpan="5" Margin="10,10,10,10" Grid.Row="4" Grid.Column="4" Click="Sale"></Button>
        <Button    Content="Склад"               FontSize="20" Grid.ColumnSpan="5" Margin="10,10,10,10" Grid.Row="5" Grid.Column="4" Click="Sklad"></Button>
        <Button    Content="Отчеты"              FontSize="20" Grid.ColumnSpan="5" Margin="10,10,10,10" Grid.Row="5" Grid.Column="4" Click="Otchet"></Button>
        <ComboBox  Name="ed_izmm"                                       Grid.ColumnSpan="1"                Grid.Row="6" Grid.Column="1"></ComboBox>
        <ComboBox  Name="kat"                                           Grid.ColumnSpan="1"                Grid.Row="8" Grid.Column="1"></ComboBox>
    </Grid>
</Window>