<Window x:Class="Zoomag.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoomag"
        mc:Ignorable="d"
        Title="AdminWindow" Height="500" Width="700">
    
    <ScrollViewer>
        <StackPanel Margin="15">
            
            <!-- Группа: Управление справочниками -->
            <GroupBox Header="Справочники" Margin="5" Padding="10">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Новая категория:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox x:Name="new_kat" Grid.Row="0" Grid.Column="1" Margin="5" FontSize="12"/>
                        <Button Content="Добавить" Grid.Row="0" Grid.Column="2" Margin="5" Padding="10,3" Click="Dob_kat"/>

                        <TextBlock Text="Новая ед/изм:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox x:Name="new_ed" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="12"/>
                        <Button Content="Добавить" Grid.Row="1" Grid.Column="2" Margin="5" Padding="10,3" Click="Zap"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Группа: Ввод товара -->
            <GroupBox Header="Добавление товара" Margin="5" Padding="10">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Товар:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox x:Name="tovar" Grid.Row="0" Grid.Column="1" Margin="5" FontSize="12"/>

                        <TextBlock Text="Количество:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox x:Name="kol_vo" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="12"/>

                        <TextBlock Text="Единица измерения:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                        <ComboBox Name="ed_izmm" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="12"/>

                        <TextBlock Text="Стоимость:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox x:Name="price" Grid.Row="3" Grid.Column="1" Margin="5" FontSize="12"/>

                        <TextBlock Text="Категория:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                        <ComboBox Name="kat" Grid.Row="4" Grid.Column="1" Margin="5" FontSize="12"/>
                    </Grid>

                    <Button Content="Сохранить товар" Margin="0,10,0,0" Padding="15,5" Click="Vvod"/>
                </StackPanel>
            </GroupBox>

            <!-- Группа: Основные действия -->
            <GroupBox Header="Основные действия" Margin="5" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Привоз" Margin="0,0,10,0" Padding="15,5" Click="Privoz"/>
                    <Button Content="Продажа" Margin="0,0,10,0" Padding="15,5" Click="Sale"/>
                    <Button Content="Склад" Margin="0,0,10,0" Padding="15,5" Click="Sklad"/>
                    <Button Content="Отчеты" Margin="0,0,10,0" Padding="15,5" Click="Otchet"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</Window>