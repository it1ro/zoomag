<Window x:Class="prriva_10.Window8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prriva_10"
        mc:Ignorable="d"
        Title="Window8" Height="800" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dg8" AutoGenerateColumns="False" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Grid.RowSpan="6" FontSize="15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Binding="{ Binding Path= id}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="дата" Binding="{ Binding Path= Data}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="наименование" Binding="{ Binding Path= Naim}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="количество" Binding="{ Binding Path= Kolvo}" Width="120"></DataGridTextColumn>
                <DataGridTextColumn Header="цена" Binding="{ Binding Path= Price}" Width="120"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Grid.Column="0" Grid.Row="7" FontSize="25"><Run Text="введите первую букву названия"/><LineBreak/><Run Text=" товара"/></TextBlock>
        <TextBox Name="tbbuk" Grid.Column="1" Grid.Row="7"/>
        <TextBlock Text="выберете категорию" Grid.Column="0" Grid.Row="6" FontSize="30"/>
        <ComboBox Name="cb" Grid.Column="1" Grid.Row="6"/>
        <TextBlock Text="выберите дату" Grid.Column="0" Grid.Row="8" FontSize="30"/>
        <Calendar Grid.Column="1" Grid.Row="8" Name="calll" Grid.RowSpan="3"/>
        <Button x:Name="bt1" Content="создать отчет" Grid.Column="0" Grid.Row="10" Background="AntiqueWhite" Click="bt1_Click"/>
        <Button Content="вернуться назад" Grid.Row="11" Grid.ColumnSpan="2" Background="AliceBlue" Click="Button_Click"/>
    </Grid>
</Window>
