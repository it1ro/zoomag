<Window x:Class="prriva_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prriva_10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Новая категория" FontSize="25" Grid.ColumnSpan="2"></TextBlock>
        <TextBlock Text="Новая ед/изм" FontSize="25" Grid.ColumnSpan="2" Grid.Row="2"> </TextBlock>
        <TextBlock Text="Товар" FontSize="25"  Grid.Row="4" > </TextBlock>
        <TextBlock Text="ед/изм" FontSize="25"  Grid.Row="6" Grid.Column="0" ></TextBlock>
        <TextBlock Text="стоимость" FontSize="25"  Grid.Row="7" Grid.Column="0" ></TextBlock>
        <TextBlock Text="категория" FontSize="25"  Grid.Row="8" Grid.Column="0" ></TextBlock>
        <TextBlock Text="Кол_во" FontSize="25"  Grid.Row="5" Grid.Column="0" ></TextBlock>
        <TextBox Grid.Row="5" x:Name="kol_vo" Grid.Column="1" Grid.ColumnSpan="1" SelectionTextBrush="Black" FontSize="15" Margin="10,10,10,10"></TextBox>
        <TextBox Grid.Row="1" x:Name="new_kat" Grid.Column="1" Grid.ColumnSpan="2" SelectionTextBrush="Black" FontSize="15" Margin="10,10,10,10"></TextBox>
        <TextBox Grid.Row="3" x:Name="new_ed" Grid.Column="1" Grid.ColumnSpan="2" SelectionTextBrush="Black" FontSize="15" Margin="10,10,10,10"></TextBox>
        <TextBox Grid.Row="4"  x:Name="tovar" Grid.Column="1" Grid.ColumnSpan="1" SelectionTextBrush="Black" FontSize="15" Margin="10,10,10,10"></TextBox>
        <TextBox Grid.Row="7" x:Name="price" Grid.Column="1" Grid.ColumnSpan="1" SelectionTextBrush="Black" FontSize="15" Margin="10,10,10,10"></TextBox>
        <Button Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="5" Content="добавление категории" FontSize="20" Click="Dob_kat" Margin="10,10,10,10"></Button>
        <Button Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="5" Content="заполнение ед/изм" FontSize="20" Click="Zap" Margin="10,10,10,10"></Button>
        <Button Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="5" Content="ввод товаров" FontSize="20" Click="Vvod" Margin="10,10,10,10"></Button>
        <Button Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="5" Content="Привоз" FontSize="20" Click="Privoz" Margin="10,10,10,10"></Button>
        <Button Grid.Column="4" Grid.Row="4" Grid.ColumnSpan="5" Content="Продажа" FontSize="20" Click="Prodajas" Margin="10,10,10,10"></Button>
        <Button Grid.Column="4" Grid.Row="5" Grid.ColumnSpan="5" Content="Склад" FontSize="20" Click="Sklad" Margin="10,10,10,10"></Button>
        <Button Grid.Column="4" Grid.Row="5" Grid.ColumnSpan="5" Content="Отчеты" FontSize="20" Click="Otchet" Margin="10,10,10,10"></Button>
        <ComboBox Name="ed_izmm" Grid.Row="6" Grid.Column="1"/>
        <ComboBox Name="kat" Grid.Row="8" Grid.Column="1" />
    </Grid>
</Window>
