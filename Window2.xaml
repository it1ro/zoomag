<Window x:Class="prriva_10.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prriva_10"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Grid.RowSpan="4" x:Name="dg2" CanUserAddRows="True" AutoGenerateColumns="False" Grid.Column="0" FontSize="24" Margin="0,0,0,108" Grid.ColumnSpan="2"> 
            <DataGrid.Columns>
                <DataGridTextColumn Header="наименование" Width="210" Binding="{Binding Path=Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="ед/изм" Width="160" Binding="{Binding Path=Izmer.Typ}"></DataGridTextColumn>
                <DataGridTextColumn Header="цена" Width="160" Binding="{Binding Path=Price}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="3" Content="Купить" FontSize="24" Click="Kupit"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical">
            <TextBlock FontSize="24" Text="Количество товара:"></TextBlock>
            <TextBox Height="70" Name="kolich" FontSize="24"></TextBox>
        </StackPanel>
        <Button Grid.Row="2" Grid.Column="2" Content="Назад" FontSize="24" Grid.RowSpan="2" Click="Button_Click"></Button>
    </Grid>
</Window>
