<!-- File: Zoomag/Styles.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== НЕЯВНЫЕ СТИЛИ ==================== -->

    <!-- Обычная кнопка -->
    <Style TargetType="Button">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="#0d6efd"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#0b5ed7"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0b5ed7"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0a58ca"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Обычный текстовый блок -->
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <!-- PasswordBox -->
    <Style TargetType="PasswordBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- DatePicker -->
    <Style TargetType="DatePicker">
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#dee2e6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
    </Style>

    <!-- Заголовок столбца DataGrid -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="#e9ecef"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <!-- GroupBox -->
    <Style TargetType="GroupBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- Border (например, для фильтров) -->
    <Style TargetType="Border">
        <Setter Property="BorderBrush" Value="#dee2e6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- ==================== ЯВНЫЕ СТИЛИ (для уникальных кнопок) ==================== -->

    <!-- Кнопка "Назад" -->
    <Style x:Key="BackButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="#6c757d"/>
        <Setter Property="BorderBrush" Value="#5a6268"/>
    </Style>

    <!-- Кнопка "Экспорт в Excel" -->
    <Style x:Key="ExportButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="#28a745"/>
        <Setter Property="BorderBrush" Value="#218838"/>
    </Style>

    <!-- Кнопка "Сохранить" -->
    <Style x:Key="SaveButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="#28a745"/>
        <Setter Property="BorderBrush" Value="#218838"/>
    </Style>

    <!-- Кнопка "Удалить/Очистить" -->
    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="#dc3545"/>
        <Setter Property="BorderBrush" Value="#c82333"/>
    </Style>

    <!-- Кнопка "Очистить/Сброс" -->
    <Style x:Key="ResetButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="#6c757d"/>
        <Setter Property="BorderBrush" Value="#5a6268"/>
    </Style>

</ResourceDictionary>