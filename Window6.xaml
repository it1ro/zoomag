<Window x:Class="prriva_10.Window6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prriva_10"
        mc:Ignorable="d"
        Title="Отчет по категориям" Height="450" Width="800">
    <Grid>
        
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dg6" AutoGenerateColumns="False" ItemsSource="{Binding Privoz}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Grid.RowSpan="4" FontSize="15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="наименование" Binding="{ Binding Path= Name}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="ед/изм" Binding="{ Binding Path= Izmer.Typ}" Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="количество" Binding="{ Binding Path= Kol_vo}" Width="150"></DataGridTextColumn>
                    <DataGridTextColumn Header="цена" Binding="{ Binding Path= Price}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="категория" Binding="{ Binding Path= Kategor.Typ}" Width="100"></DataGridTextColumn>
                
            </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="nazad" Content="Назад" FontSize="24" Grid.Row="3" Grid.Column="5" Click="nazad_Click"></Button>
        <Button x:Name="viv_v_excel" Content="Ввод данных" FontSize="24" Grid.Row="2" Grid.Column="5" Click="viv_v_excel_Click"></Button>
        <ComboBox Name="kat" Grid.Row="1" Grid.Column="4" SelectionChanged="kat_SelectionChanged"></ComboBox>
    </Grid>
</Window>
